                    @Html.EditorFor(model => model.DestinationsID)
                    @Html.ValidationMessageFor(model => model.DestinationsID)
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to Reservations List", "Index")
</div>
