@model IEnumerable<Destinations>
@{
    ViewBag.Title = "Destinations";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Add Destination", "AddDestination")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripType)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TripType)
            </td>

            <td>
                @Html.ActionLink("Edit", "EditDestination", new { DestinationsID = item.DestinationsID }) |
                @Html.ActionLink("Delete", "DeleteDestination", new { DestinationsID = item.DestinationsID})
            </td>
        </tr>
    }
</table>